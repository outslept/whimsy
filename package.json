{
  "name": "whimsy",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.10.0",
  "description": "Minimalistic library for creating charming CLI interfaces",
  "license": "MIT",
  "funding": "https://github.com/sponsors/outslept",
  "homepage": "https://github.com/outslept/whimsy#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outslept/whimsy.git"
  },
  "bugs": "https://github.com/outslept/whimsy/issues",
  "keywords": [
    "cli",
    "terminal",
    "tui",
    "interface"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "inspect:eslint": "pnpx @eslint/config-inspector",
    "inspect:modules": "pnpx node-modules-inspector"
  },
  "dependencies": {
    "ansis": "^3.17.0",
    "fast-string-width": "^1.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.3.0",
    "@oxc-node/core": "^0.0.27",
    "@types/node": "^22.14.0",
    "eslint": "^9.20.1",
    "lint-staged": "^16.0.0",
    "pathe": "^2.0.3",
    "picocolors": "^1.1.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "unbuild": "^3.3.1",
    "vitest": "^3.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
